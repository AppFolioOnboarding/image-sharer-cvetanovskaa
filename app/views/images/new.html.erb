<div class="pt-4">
  <div class="container">
    <% if @image.errors.any? %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <p> <%= @image.errors.full_messages.first%> </p>
      </div>
    <% end %>

    <div class = "col-md-12">
      <%= form_for @image, :html => {:class => "center"} do |f|%>
        <div class="form-group">
          <%= label_tag(:url, "Post your image URL:", class: "font-weight-bold")  %>
        </div>
        <div class="form-group">
          <%= f.text_field :url, :required => true, class: "col-md-12 form-control required"%>
        </div>
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-primary mb-2 " %>
        </div>
      <% end %>
    </div>
  </div>
</div>
